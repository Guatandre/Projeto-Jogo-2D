<div class="modal" id="modal">
    <div class="row rounded-4" id="caixa">
        <div id="login" class="content">
            <h2>Login</h2>
            <hr>
            <form action="/login" method="POST">

                <div id='sucessoCadastro' style="display: block;">
                    {{#if registrarMensagem}}
                    <script>
                        let sucessoCadastro = document.querySelector("#modal").style.display = 'block';
                    </script>
                    <div>{{registrarMensagem}}</div>
                    {{/if}}
                </div>

                <div class="form-group">
                    <label for="nick">Nickname:</label>
                    <input type="text" id="nick" name="nick" required>
                </div>

                <div class="form-group">
                    <label for="senha">Senha:</label>
                    <input type="password" id="senha" name="senha" required>
                </div>

                <div id='erro' style="display: block;">
                    {{#if erroLogin}}
                    <script>
                        let login = document.querySelector("#modal").style.display = 'block';
                    </script>
                    <div>{{erroLogin}}</div>
                    {{/if}}
                </div>

                <div class="form-buttons">
                    <input type="submit" value="Logar" name="logar">
                    <input type="button" id="btnCriar" value="Criar">
                </div>
            </form>
        </div>
    </div>
</div>